<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gameback"
    tools:context="com.emperia.isurup.mastermath.MathGame">


    <TextView
        android:id="@+id/textView3"
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="88dp"
        android:text="@string/guess_it"
        android:textColor="#E803E4"
        android:textSize="35dp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.033"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/displayquestion"
        android:layout_width="197dp"
        android:layout_height="128dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="155dp"
        android:gravity="right"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteY="163dp" />

    <TextView
        android:id="@+id/displayanswer"
        android:layout_width="171dp"
        android:layout_height="130dp"
        android:layout_marginTop="155dp"
        android:text="= ?"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteY="163dp"
        tools:layout_editor_absoluteX="213dp"
        android:layout_marginRight="0dp" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginBottom="-4dp"
        android:layout_marginLeft="0dp"
        android:layout_weight="1"
        android:background="#111111"
        android:gravity="center"
        android:padding="5dp"
        android:tag="1"
        android:text="1"
        android:textColor="#0FF91A"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/btn4"
        app:layout_constraintLeft_toLeftOf="@+id/guideline" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginBottom="0dp"
        android:layout_weight="1"
        android:background="#111111"
        android:gravity="center"
        android:tag="2"
        android:text="2"
        android:textColor="#0FF91A"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/btn5"
        app:layout_constraintLeft_toRightOf="@+id/btn1" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:background="#111111"
        android:gravity="center"
        android:padding="5dp"
        android:tag="3"
        android:text="3"
        android:textColor="#0FF91A"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/btn6"
        app:layout_constraintLeft_toRightOf="@+id/btn2" />

    <Button
        android:id="@+id/btn4"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:background="#111111"
        android:gravity="center"
        android:padding="5dp"
        android:tag="4"
        android:text="4"
        android:textColor="#0FF91A"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/btn7"
        app:layout_constraintLeft_toLeftOf="@+id/guideline" />

    <Button
        android:id="@+id/btn5"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:background="#111111"
        android:gravity="center"
        android:padding="5dp"
        android:tag="5"
        android:text="5"
        android:textColor="#0FF91A"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/btn8"
        app:layout_constraintLeft_toRightOf="@+id/btn4" />

    <Button
        android:id="@+id/btn6"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:background="#111111"
        android:gravity="center"
        android:padding="5dp"
        android:tag="6"
        android:text="6"
        android:textColor="#0FF91A"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/btn9"
        app:layout_constraintLeft_toRightOf="@+id/btn5" />

    <Button
        android:id="@+id/btn7"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_weight="1"
        android:background="#111111"
        android:gravity="center"
        android:padding="5dp"
        android:tag="7"
        android:text="7"
        android:textColor="#0FF91A"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/btndel"
        app:layout_constraintLeft_toLeftOf="@+id/guideline" />

    <Button
        android:id="@+id/btn8"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:background="#111111"
        android:gravity="center"
        android:padding="5dp"
        android:tag="8"
        android:text="8"
        android:textColor="#0FF91A"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/btn0"
        app:layout_constraintLeft_toRightOf="@+id/btn7" />

    <Button
        android:id="@+id/btn9"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:background="#111111"
        android:gravity="center"
        android:padding="5dp"
        android:tag="9"
        android:text="9"
        android:textColor="#0FF91A"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/btnminus"
        app:layout_constraintLeft_toRightOf="@+id/btn8"
        tools:layout_editor_absoluteY="538dp" />

    <Button
        android:id="@+id/btn0"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:background="#111111"
        android:gravity="center"
        android:padding="5dp"
        android:tag="0"
        android:text="0"
        android:textColor="#0FF91A"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/btndel" />

    <Button
        android:id="@+id/btndel"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:background="#111111"
        android:gravity="center"
        android:padding="5dp"
        android:text="del"
        android:textAlignment="center"
        android:textColor="#cc2900"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/guideline" />


    <Button
        android:id="@+id/btnenter"
        android:layout_width="90dp"
        android:layout_height="54dp"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="0dp"
        android:layout_weight="1"
        android:background="#595959"
        android:gravity="center"
        android:padding="5dp"
        android:text="#"
        android:textColor="#05F8D3"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/btn0" />

    <Button
        android:id="@+id/btnminus"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginBottom="0dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:background="#111111"
        android:gravity="center"
        android:padding="5dp"
        android:tag="-"
        android:text="-"
        android:textColor="#009688"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/btn9"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/guideline2" />

    <TextView
        android:id="@+id/displaytime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="17dp"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="9dp"
        android:layout_marginTop="17dp"
        android:text=""
        android:textColor="#6DFF2E"
        android:textSize="17dp"
        android:textStyle="italic"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="59dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="23dp"
        android:textAlignment="center"
        android:textSize="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.425"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/displayquestion"
        app:layout_constraintVertical_bias="0.029" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="16dp" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="384dp" />

    <ImageView
        android:id="@+id/resultImg"
        android:layout_width="42dp"
        android:layout_height="43dp"
        android:layout_marginBottom="9dp"
        android:layout_marginLeft="23dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/result"
        app:layout_constraintLeft_toRightOf="@+id/result" />


    <TextView
        android:id="@+id/hinttext"
        android:layout_width="57dp"
        android:layout_height="22dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        android:text="Hints left:"
        android:textColor="#009688"
        app:layout_constraintLeft_toLeftOf="@+id/hint"
        app:layout_constraintRight_toLeftOf="@+id/guideline2"
        app:layout_constraintTop_toBottomOf="@+id/hint" />

    <ToggleButton
        android:id="@+id/hint"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_marginBottom="120dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="5dp"
        android:checked="false"
        android:shadowColor="#FFC108"
        android:textColor="#F8F805"
        android:textOff="Hint Off"
        android:textOn="Hint On"
        app:layout_constraintBottom_toTopOf="@+id/btnminus"
        app:layout_constraintHorizontal_bias="0.995"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/guideline2" />

    <TextView
        android:id="@+id/hintNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="0dp"
        android:text=""
        android:textAlignment="center"
        android:textColor="#820AEB"
        android:textSize="38dp"
        app:layout_constraintLeft_toLeftOf="@+id/hinttext"
        app:layout_constraintRight_toRightOf="@+id/hinttext"
        app:layout_constraintTop_toBottomOf="@+id/hinttext" />

</android.support.constraint.ConstraintLayout>
