<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_start_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/math"
    android:paddingBottom="@dimen/vertical_act_margin"
    android:paddingLeft="@dimen/horizontal_act_margin"
    android:paddingRight="@dimen/horizontal_act_margin"
    android:paddingTop="@dimen/vertical_act_margin"
    tools:context="com.emperia.isurup.mastermath.MathGame">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0C950C"
        android:orientation="vertical"
        android:padding="10px"
        android:layout_gravity="center"
        android:weightSum="1">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/exitMsg"
            android:textAlignment="center"
            android:textColor="#CED7DA"
            android:textSize="40dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.07"
            android:text="\n\n Are You Sure?\n\n"
            android:textAlignment="center"
            android:textColor="#111111"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:padding="10px">


            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/save"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="#0FB8F3"
                android:textColor="#000000"
                android:alpha="0.85"
                android:text="Save and Exit"
                android:textAllCaps="false"
                android:textSize="15dp" />

            <Button
                android:id="@+id/directexit"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="#F90404"
                android:textColor="#000000"
                android:alpha="0.85"
                android:text="Exit"
                android:textAllCaps="false"
                android:textSize="15dp" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>